<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="?android:attr/listPreferredItemPaddingEnd"
    android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
    android:layout_marginBottom="10dp"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nad"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_marginBottom="@dimen/nad_card_separator"
        android:background="@drawable/nad_bg_top"
        android:backgroundTint="?androidprv:attr/colorSurfaceHeader"
        android:clipToPadding="false"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/nad_wings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:minWidth="58dp"
                android:padding="4dp"
                android:backgroundTint="@android:color/system_accent1_500"
                android:background="@drawable/nad_top_bg">

                <androidx.preference.internal.PreferenceImageView
                    android:id="@+id/avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@android:color/system_neutral1_10"
                    app:maxWidth="48dp"
                    app:maxHeight="48dp"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_settings_alpha" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/text_frame"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nad_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/alpha_settings_title"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:textDirection="locale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@stringa/alpha_settings_summary"
                    style="@style/PreferenceSummaryTextStyle"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:layout_marginEnd="1dp"
            android:padding="14dp"
            android:id="@+id/about"
            android:backgroundTint="?androidprv:attr/colorSurfaceHeader"
            android:background="@drawable/nad_bg_bottom_left"
            android:layout_gravity="center"
            android:gravity="center">
            	
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:singleLine="true"
                android:layout_marginStart="4dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="@string/about_settings"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:textColor="?android:attr/textColorPrimary"
                style="@style/PreferenceSummaryTextStyle"/>

            <ImageView
                android:id="@+id/about_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:antialias="true"
                android:gravity="end|center_vertical"
                android:layout_gravity="end|center_vertical"
                android:scaleType="fitCenter"
                android:layout_marginStart="2dp"
                android:layout_weight="0.8"
                android:tint="?android:attr/textColorPrimary"
                android:src="@drawable/ic_phone_info" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/system"
            android:layout_marginStart="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:padding="14dp"
            android:backgroundTint="?androidprv:attr/colorSurfaceHeader"
            android:background="@drawable/nad_bg_bottom_right"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:singleLine="true"
                android:layout_marginStart="4dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="@string/header_category_system"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:textColor="?android:attr/textColorPrimary"
                style="@style/PreferenceSummaryTextStyle"/>

            <ImageView
                android:id="@+id/system_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:antialias="true"
                android:gravity="end|center_vertical"
                android:layout_gravity="end|center_vertical"
                android:scaleType="fitCenter"
                android:layout_marginStart="2dp"
                android:layout_weight="0.8"
                android:tint="?android:attr/textColorPrimary"
                android:src="@drawable/ic_settings_system_dashboard_white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
