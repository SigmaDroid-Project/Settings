<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nad_grid_height"
    android:layout_marginTop="@dimen/nad_grid_margin"
    android:layout_marginStart="?android:attr/listPreferredItemPaddingEnd"
    android:layout_marginEnd="?android:attr/listPreferredItemPaddingEnd"
    android:clipToPadding="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/battery_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:layout_marginEnd="@dimen/nad_grid_layout_margin"
            android:layout_marginBottom="@dimen/nad_grid_layout_margin"
            android:backgroundTint="?androidprv:attr/colorSurfaceHeader"
            android:background="@drawable/nad_top_bg"
            android:layout_gravity="top"
            android:gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progressDrawable="@drawable/nad_grid_progress_drawable"
                    android:progressBackgroundTint="@android:color/transparent"
                    android:scaleY="1"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/nad_grid_content_padding"
                    android:layout_marginStart="@dimen/nad_grid_content_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                    	android:id="@+id/usage_summary"
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	app:layout_constraintStart_toStartOf="parent"
                    	app:layout_constraintBaseline_toBaselineOf="@id/total_summary"
                    	android:ellipsize="marquee"
                    	android:textAppearance="@*android:style/TextAppearance.DeviceDefault.Body1"
                    	android:textSize="12sp"
                    	android:textAlignment="viewStart"/>
                    <TextView
                    	android:id="@+id/total_summary"
                    	android:layout_width="0dp"
                    	android:layout_height="wrap_content"
                    	app:layout_constraintStart_toEndOf="@id/usage_summary"
                    	android:ellipsize="marquee"
                    	android:textAppearance="@*android:style/TextAppearance.DeviceDefault.Body1"
                    	android:textSize="12sp"
                    	android:textAlignment="viewEnd"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/battery_usage"
            android:layout_marginEnd="@dimen/nad_grid_layout_margin"
            android:layout_marginTop="@dimen/nad_grid_layout_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="0.5"
            android:padding="@dimen/nad_grid_content_padding"
            android:backgroundTint="?androidprv:attr/colorSurfaceHeader"
            android:background="@drawable/nad_top_bg">
            <LinearLayout
                android:id="@+id/battery_usage_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/battery_usage_title"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@string/advanced_battery_preference_title"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:hyphenationFrequency="normalFast"/>

                <TextView
                    android:id="@+id/battery_usage_summary"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:text="@string/summary_placeholder"
                    style="@style/PreferenceSummaryTextStyle"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/top_level_battery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_weight="0.5"
        android:layout_marginStart="@dimen/nad_grid_layout_margin"
        android:background="@drawable/nad_top_bg"
        android:backgroundTint="?androidprv:attr/colorSurfaceHeader"
        android:clipToPadding="false"
        android:padding="@dimen/nad_grid_margin"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/nad_grid_content_padding"
            android:gravity="top|center"
            android:minWidth="58dp"
            android:padding="4dp"
            android:backgroundTint="@android:color/system_accent1_500"
            android:background="@drawable/nad_top_bg">

            <androidx.preference.internal.PreferenceImageView
            	android:id="@+id/avatar"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:tint="@android:color/system_neutral1_10"
            	app:maxWidth="48dp"
            	app:maxHeight="48dp"
            	android:padding="4dp"
            	android:layout_gravity="center"
            	android:src="@drawable/ic_settings_battery_white" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/text_frame"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/nad_grid_layout_content_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            	android:id="@+id/battery_title"
            	android:gravity="center"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:ellipsize="marquee"
            	android:marqueeRepeatLimit="marquee_forever"
            	android:singleLine="true"
            	android:text="@string/power_usage_summary_title"
            	android:textAppearance="?android:attr/textAppearanceListItem"
            	android:hyphenationFrequency="normalFast" />

            <TextView
            	android:id="@+id/battery_summary"
            	android:gravity="center"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:layout_marginTop="1dp"
            	android:ellipsize="marquee"
            	android:singleLine="true"
            	android:textAppearance="?android:attr/textAppearanceSmall"
            	android:textColor="?android:attr/textColorSecondary"
            	android:text="@string/summary_placeholder"
            	style="@style/PreferenceSummaryTextStyle"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>