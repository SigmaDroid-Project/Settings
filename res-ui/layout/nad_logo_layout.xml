<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
        android:gravity="center|bottom"
        android:background="@drawable/nad_bg_gaydient"
        android:backgroundTint="?androidprv:attr/colorSurfaceHeader"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/alpha_logo"
            android:background="@drawable/nad_logo_bg"
            android:backgroundTint="?android:attr/colorPrimary"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerInside"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />
            
        <View
            android:layout_width="match_parent"
            android:layout_height="20.0dp"
            android:layout_marginBottom="-19dp"
            android:background="@drawable/nad_round_top"
            android:rotation="180.0"
            android:gravity="bottom"
            android:backgroundTint="?android:attr/colorPrimary"/>

</LinearLayout> 
