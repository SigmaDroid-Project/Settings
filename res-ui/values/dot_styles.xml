<resources>
	  <declare-styleable name="Themes">
        <attr name="waveViewStyle" format="reference"/>
    </declare-styleable>
    <declare-styleable name="DeviceCardView">
        <attr name="extra_title" format="string"/>
    </declare-styleable>

    <!-- Text Styles -->
    <style name="dotTextPrimary">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
    </style>

    <style name="dotTextPrimaryMedium" parent="dotTextPrimary">
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <style name="dotTextSecondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Preferences -->

    <!-- General -->
    <style name="dotPreferenceBase">
        <item name="android:layout_marginStart">@dimen/dot_pref_horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/dot_pref_horizontal_padding</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="dotPreferenceTop" parent="dotPreferenceBase">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/dot_preference_background_top</item>
    </style>

    <style name="dotPreferenceMiddle" parent="dotPreferenceBase">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">@drawable/dot_preference_background_middle</item>
    </style>

    <style name="dotPreferenceBottom" parent="dotPreferenceBase">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/dot_preference_background_bottom</item>
    </style>

    <style name="dotPreferenceFull" parent="dotPreferenceBase">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/dot_preference_background_full</item>
    </style>

    <style name="dotPreferenceFullAccent" parent="dotPreferenceBase">
        <item name="android:layout_marginTop">@dimen/dot_pref_horizontal_padding</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/dot_preference_background_full_accent</item>
    </style>

    <!-- Dashboard -->
    <style name="dotDashboardPreferenceTop" parent="dotPreferenceTop">
        <item name="android:layout_marginTop">@dimen/dot_pref_horizontal_padding</item>
    </style>

    <style name="dotDashboardPreferenceBottom" parent="dotPreferenceBottom">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="dotDashboardPreferenceFull" parent="dotPreferenceFull">
        <item name="android:layout_marginTop">@dimen/dot_pref_horizontal_padding</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="dotDashboardPreferenceFullAccent" parent="dotDashboardPreferenceFull">
        <item name="android:background">@drawable/dot_preference_background_full_accent</item>
    </style>

    <style name="dotDashboardPreferenceFullAccent2" parent="dotDashboardPreferenceFull">
        <item name="android:background">@drawable/dot_preference_background_full_accent_2</item>
    </style>

    <style name="dotDashboardPreferencePhone" parent="dotDashboardPreferenceTop">
        <item name="android:background">@drawable/dot_preference_background_phone</item>
    </style>

</resources>
