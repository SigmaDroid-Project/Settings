<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sigma_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:id="@+id/version_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/sigma_color_accent2"
                android:background="@drawable/sigma_preference_about"
                android:gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_settings_display_op"
                    android:background="@drawable/about_icon_bg"
                    android:tint="?android:attr/textColorPrimaryInverse"
                    />
                    
                <TextView
                android:id="@+id/version_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:text="@string/version"
                style="@style/TextAppearance.SigmaInfoTitle" />

                <TextView
                    android:id="@+id/version_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="2.5dp"
                    style="@style/TextAppearance.SigmaInfoSummary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/device_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/sigma_color_secondary_accent"
                android:background="@drawable/sigma_preference_about"
                android:layout_marginStart="4dp"
                android:padding="16dp"
                android:gravity="start"
                android:orientation="vertical">
            
            
                <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_storage_op"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/about_icon_bg"
                android:tint="?android:attr/textColorPrimaryInverse"/>
            
                <TextView
                android:id="@+id/device_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.5dp"
                android:text="@string/about_device_name"
                style="@style/TextAppearance.SigmaInfoTitle" />

                <TextView
                    android:id="@+id/device_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="2.5dp"
                    style="@style/TextAppearance.SigmaInfoSummary" />
                                
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            

                <LinearLayout
                    android:id="@+id/storage_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/sigma_preference_about"
                    android:backgroundTint="@color/sigma_color_secondary_accent"
                    android:gravity="start"
                    android:orientation="vertical">
                
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_storage_op"
                            android:background="@drawable/about_icon_bg"
                            android:tint="?android:attr/textColorPrimaryInverse"
                            />

                        <TextView
                            android:id="@+id/storage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2.5dp"
                            android:text="@string/storage"
                            style="@style/TextAppearance.SigmaInfoTitle" />

                        <TextView
                            android:id="@+id/cust_storage_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginBottom="2.5dp"
                            style="@style/TextAppearance.SigmaInfoSummary" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/battery_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="16dp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/sigma_color_accent2"
                    android:background="@drawable/sigma_preference_about"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_settings_battery_op"
                        android:background="@drawable/about_icon_bg"
                        android:tint="?android:attr/textColorPrimaryInverse"
                        />

                    <TextView
                        android:id="@+id/battery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/battery"
                        android:layout_marginBottom="2.5dp"
                        style="@style/TextAppearance.SigmaInfoTitle" />

                    <TextView
                        android:id="@+id/cust_battery_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginBottom="2.5dp"
                        style="@style/TextAppearance.SigmaInfoSummary" />
                
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">
            

                <LinearLayout
                    android:id="@+id/chipset_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/sigma_preference_about"
                    android:backgroundTint="@color/sigma_color_accent2"
                    android:gravity="start"
                    android:orientation="vertical">
                
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_settings_memory"
                            android:background="@drawable/about_icon_bg"
                            android:tint="?android:attr/textColorPrimaryInverse"
                            />

                        <TextView
                            android:id="@+id/chipset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2.5dp"
                            android:text="@string/chipset"
                            style="@style/TextAppearance.SigmaInfoTitle" />

                        <TextView
                            android:id="@+id/cust_chipset_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginBottom="2.5dp"
                            style="@style/TextAppearance.SigmaInfoSummary" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/display_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="16dp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/sigma_color_secondary_accent"
                    android:background="@drawable/sigma_preference_about"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_settings_display_op"
                        android:background="@drawable/about_icon_bg"
                        android:tint="?android:attr/textColorPrimaryInverse"
                        />

                    <TextView
                        android:id="@+id/display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/display"
                        android:layout_marginBottom="2.5dp"
                        style="@style/TextAppearance.SigmaInfoTitle" />

                    <TextView
                        android:id="@+id/cust_display_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginBottom="2.5dp"
                        style="@style/TextAppearance.SigmaInfoSummary" />
                
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>