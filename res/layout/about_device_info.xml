<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:visibility="gone"
        android:orientation="vertical">
    
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/phone_image"
            android:layout_width="100dp"
            android:layout_height="205dp"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            app:cardElevation="0dp"
            app:cardCornerRadius="18dp"
            app:strokeColor="?android:attr/textColorPrimary"
            app:strokeWidth="3dp">

            <com.android.settings.preferences.ui.WallpaperView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:elevation="0dp"
                android:contentDescription="@null"
                android:orientation="vertical" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/build_variant_title"
            style="@style/op_control_text_style_h6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gapps"
            android:textSize="16sp"
            android:textColor="@color/op_control_text_color_primary"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/android_logo"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/device_info_android_logo"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>
